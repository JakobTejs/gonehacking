<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jakob.roedekors.MinGruppeActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Indsamlet i alt af gruppen"
        android:id="@+id/textView28"
        android:layout_marginTop="45dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kr"
        android:id="@+id/textView29"
        android:layout_marginTop="42dp"
        android:textSize="40dp"
        android:layout_below="@+id/textView28"
        android:layout_toEndOf="@+id/textView30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10.000"
        android:id="@+id/textView30"
        android:textSize="40dp"
        android:layout_alignTop="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Min Gruppe"
        android:id="@+id/button"
        android:layout_marginTop="86dp"
        android:background="@drawable/button_background"
        android:textColor="#d2d2ce"
        android:textSize="20dp"
        android:layout_below="@+id/textView29"
        android:layout_alignStart="@+id/button6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Tilmeld gruppe"
        android:id="@+id/button6"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="#d2d2ce"
        android:background="@drawable/button_background"
        android:textSize="18dp" />

</RelativeLayout>
