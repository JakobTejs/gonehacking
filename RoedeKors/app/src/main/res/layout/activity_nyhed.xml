<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jakob.roedekors.nyhedActivity"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView32">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView29"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="215dp"
                android:id="@+id/imageView5"
                android:src="@drawable/earthquake"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Du kan redde liv"
                android:id="@+id/textView28"
                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Natten til søndag blev syddansk-mini-polynesien ramt af et jordskælv der blev målt til 8,2 på Richterskalaen."
                android:id="@+id/textView29"
                android:layout_below="@+id/textView28"
                android:layout_alignParentStart="true"
                android:shadowColor="#000000"
                android:textColor="@color/text_secondary"
                android:textColorHighlight="#ffffff"
                android:textSize="20dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Jordskælvet medførte voldsomme ødelæggelser, og man frygter nu de følgesygdomme som er den største risiko i forbindelse med manglen på rent vand."
                android:id="@+id/textView30"
                android:layout_below="@+id/textView29"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_secondary"
                android:textColorHighlight="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hurtig reaktion er vigtig. Vi har brug for at rykke ud nu, hvis vi skal redde titusindvis af mennesker fra sult og død."
                android:id="@+id/textView31"
                android:textColor="@color/text_secondary"
                android:textColorHighlight="#ffffff"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff"
                android:textIsSelectable="true"
                android:layout_below="@+id/textView30"
                android:layout_alignParentStart="true"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Støt nu"
        android:id="@+id/Donernu"
        android:background="@drawable/button_background"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:clickable="true"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Du er forskellen, hvis du hjælper nu, redder du liv."
        android:id="@+id/textView32"
        android:textSize="28dp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_above="@+id/Donernu"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>